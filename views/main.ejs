<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %>
    <title>Home - Blogify</title>
    <style>
        /* Hero Section Enhancements */
        .hero-section {
            height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(45deg, #0f0c29, #302b63, #24243e);
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: white;
            padding: 2rem;
        }

        .hero-title {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: gradientShift 5s ease infinite;
        }

        /* Trending Blogs Section */
        .trending-section {
            padding: 4rem 0;
            background: #f8f9fa;
        }

        .trending-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            transition: transform 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin: 0 10px;
        }

        .trending-card:hover {
            transform: translateY(-5px);
        }

        .trending-rank {
            font-size: 2rem;
            font-weight: bold;
            color: #4ecdc4;
            margin-right: 1rem;
        }

        /* Categories Grid */
        .categories-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            padding: 2rem 0;
        }

        .category-card {
            padding: 2rem;
            text-align: center;
            border-radius: 12px;
            background: white;
            transition: all 0.3s ease;
        }

        .category-card:hover {
            background: #4ecdc4;
            color: white;
            transform: scale(1.05);
        }

        /* Newsletter Section */
        .newsletter-section {
            background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            color: white;
            padding: 4rem 0;
            text-align: center;
        }

        .newsletter-input {
            max-width: 500px;
            margin: 0 auto;
            position: relative;
        }

        /* Animations */
        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .scroll-reveal {
            opacity: 0;
            transform: translateY(30px);
            transition: all 0.6s ease;
        }

        .scroll-reveal.active {
            opacity: 1;
            transform: translateY(0);
        }
    </style>
</head>
<body>

    <%- include('./partials/nav') %>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">Explore Limitless Stories</h1>
            <p class="lead text-white mb-4">Discover, Share, and Connect with Amazing Content</p>
            <a href="#trending" class="btn btn-light btn-lg px-5">Explore Trending</a>
        </div>
    </section>

    <!-- Trending Blogs -->
    <section id="trending" class="trending-section scroll-reveal">
        <div class="container">
            <h2 class="text-center mb-5">üî• Trending This Week</h2>
            <div class="trending-slider">
                <div class="row flex-nowrap overflow-auto pb-4">
                    <% trendingBlogs.forEach((blog, index) => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="trending-card d-flex align-items-center mb-4">
                                <div class="trending-rank">#<%= index + 1 %></div>
                                <div>
                                    <h5><a href="/blog/<%= blog._id %>" class="text-dark"><%= blog.title %></a></h5>
                                    <div class="d-flex text-muted small">
                                        <span class="me-3">üë§ <%= blog.createdBy.fullName %></span>
                                        <span>üëÅÔ∏è <%= blog.views %> views</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Blogs Grid -->
    <section class="container py-5 scroll-reveal">
        <h2 class="text-center mb-5">üåü Featured Stories</h2>
        <div class="row g-4">
            <% if (featuredBlogs.length === 0) { %>
                <div class="col-12">
                    <p class="text-center">No featured blogs found.</p>
                </div>
            <% } else { %>
                <% featuredBlogs.forEach(blog => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card blog-card h-100">
                            <img src="<%= blog.image || '/images/default.jpg' %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%= blog.title %></h5>
                                <p class="text-muted small"><%= blog.createdBy.fullName %></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="/blog/<%= blog._id %>" class="btn btn-primary">Read Now</a>
                                    <span class="badge bg-warning"><%= blog.category %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>

        </div>
    </section>

    <!-- Categories Grid -->
    <section class="container py-5 scroll-reveal">
        <h2 class="text-center mb-5">üìö Popular Categories</h2>
        <div class="categories-grid">
            <div class="category-card">
                <i class="bi bi-code-square fs-1"></i>
                <h4 class="mt-3">Technology</h4>
            </div>
            <div class="category-card">
                <i class="bi bi-briefcase fs-1"></i>
                <h4 class="mt-3">Business</h4>
            </div>
            <div class="category-card">
                <i class="bi bi-heart fs-1"></i>
                <h4 class="mt-3">Lifestyle</h4>
            </div>
            <div class="category-card">
                <i class="bi bi-globe fs-1"></i>
                <h4 class="mt-3">Travel</h4>
            </div>
        </div>
    </section>

    <!-- Newsletter Section -->
    <section class="newsletter-section scroll-reveal">
        <div class="container">
            <h2>üì¨ Stay Updated</h2>
            <p class="mb-4">Subscribe to our newsletter for weekly curated content</p>
            <div class="newsletter-input">
                <input type="email" class="form-control form-control-lg" placeholder="Enter your email">
                <button class="btn btn-light mt-3 px-5">Subscribe</button>
            </div>
        </div>
    </section>

    <%- include('./partials/footer') %>

    <script> 
        // Scroll Reveal Animation
        const scrollReveal = document.querySelectorAll('.scroll-reveal');
        
        const revealOnScroll = () => {
            scrollReveal.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const windowHeight = window.innerHeight;
                
                if (elementTop < windowHeight * 0.8) {
                    element.classList.add('active');
                }
            });
        }

        window.addEventListener('scroll', revealOnScroll);
        window.addEventListener('load', revealOnScroll);

        // Horizontal Scroll for Trending
        const slider = document.querySelector('.trending-slider .row');
        let isDown = false;
        let startX;
        let scrollLeft;

        slider.addEventListener('mousedown', (e) => {
            isDown = true;
            slider.classList.add('active');
            startX = e.pageX - slider.offsetLeft;
            scrollLeft = slider.scrollLeft;
        });

        slider.addEventListener('mouseleave', () => {
            isDown = false;
            slider.classList.remove('active');
        });

        slider.addEventListener('mouseup', () => {
            isDown = false;
            slider.classList.remove('active');
        });

        slider.addEventListener('mousemove', (e) => {
            if (!isDown) return;
            e.preventDefault();
            const x = e.pageX - slider.offsetLeft;
            const walk = (x - startX) * 2;
            slider.scrollLeft = scrollLeft - walk;
        });
    </script>
    <script>
        // Add intersection observer for scroll animations
        document.addEventListener('DOMContentLoaded', () => {
            const animateOnScroll = (elements) => {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }
                    });
                }, { threshold: 0.1 });

                elements.forEach(el => observer.observe(el));
            };

            // Animate feature cards
            const features = document.querySelectorAll('.feature-card');
            animateOnScroll(features);
        });

        // Add dynamic mouse effect
        document.addEventListener('mousemove', (e) => {
            const hero = document.querySelector('.hero-section');
            const x = e.clientX / window.innerWidth;
            const y = e.clientY / window.innerHeight;
            
            hero.style.transform = `
                perspective(1000px)
                rotateX(${(y - 0.5) * 10}deg)
                rotateY(${(x - 0.5) * 10}deg)
            `;
        });
    </script>

</body>
</html>