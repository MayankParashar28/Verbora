    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Theme toggle functionality
            const themeToggle = document.getElementById('themeToggle');
            const footer = document.querySelector('.footer');
            
            themeToggle.addEventListener('change', function() {
                if(this.checked) {
                    // Dark theme
                    document.body.style.backgroundColor = '#333';
                    document.body.style.color = '#fff';
                    footer.style.backgroundColor = '#222';
                    footer.style.color = '#fff';
                    footer.style.boxShadow = '0 -1px 6px rgba(0, 0, 0, 0.2)';
                    
                    // Update styles for dark theme
                    document.querySelectorAll('.footer-section h2').forEach(el => el.style.color = '#eee');
                    document.querySelectorAll('.footer-section p, .contact-info li').forEach(el => el.style.color = '#bbb');
                    document.querySelectorAll('.quick-links a, .footer-links a').forEach(el => el.style.color = '#bbb');
                    document.querySelectorAll('.divider').forEach(el => el.style.backgroundColor = '#444');
                    document.querySelector('.copyright').style.color = '#aaa';
                    
                    // Update form elements
                    document.querySelector('.newsletter-input').style.backgroundColor = '#333';
                    document.querySelector('.newsletter-input').style.borderColor = '#444';
                    document.querySelector('.newsletter-input').style.color = '#eee';
                    document.querySelector('.newsletter-button').style.backgroundColor = '#333';
                    document.querySelector('.newsletter-button').style.borderColor = '#444';
                    document.querySelector('.newsletter-button').style.color = '#eee';
                    
                    // Update social icons
                    document.querySelectorAll('.social-icon').forEach(el => {
                        el.style.backgroundColor = '#333';
                        el.style.color = '#eee';
                    });
                } else {
                    // Light theme (reset to initial)
                    document.body.style.backgroundColor = '#f5f5f5';
                    document.body.style.color = '#333';
                    footer.style.backgroundColor = '#ffffff';
                    footer.style.color = '#333';
                    footer.style.boxShadow = '0 -1px 6px rgba(0, 0, 0, 0.05)';
                    
                    // Reset styles
                    document.querySelectorAll('.footer-section h2').forEach(el => el.style.color = '#444');
                    document.querySelectorAll('.footer-section p, .contact-info li').forEach(el => el.style.color = '#666');
                    document.querySelectorAll('.quick-links a, .footer-links a').forEach(el => el.style.color = '#666');
                    document.querySelectorAll('.divider').forEach(el => el.style.backgroundColor = '#e0e0e0');
                    document.querySelector('.copyright').style.color = '#777';
                    
                    // Reset form elements
                    document.querySelector('.newsletter-input').style.backgroundColor = '#f5f5f5';
                    document.querySelector('.newsletter-input').style.borderColor = '#e0e0e0';
                    document.querySelector('.newsletter-input').style.color = '#333';
                    document.querySelector('.newsletter-button').style.backgroundColor = '#f5f5f5';
                    document.querySelector('.newsletter-button').style.borderColor = '#e0e0e0';
                    document.querySelector('.newsletter-button').style.color = '#555';
                    
                    // Reset social icons
                    document.querySelectorAll('.social-icon').forEach(el => {
                        el.style.backgroundColor = '#f5f5f5';
                        el.style.color = '#555';
                    });
                }
            });
            
            // Newsletter form handling
            const newsletterForm = document.querySelector('.newsletter-form');
            const newsletterInput = document.querySelector('.newsletter-input');
            
            newsletterForm.addEventListener('submit', function(e) {
                e.preventDefault();
                if(newsletterInput.value.trim() !== '') {
                    alert('Thank you for subscribing to our newsletter!');
                    newsletterInput.value = '';
                } else {
                    alert('Please enter a valid email address.');
                }
            });
            
            // Add click event for newsletter button
            const newsletterButton = document.querySelector('.newsletter-button');
            newsletterButton.addEventListener('click', function(e) {
                e.preventDefault();
                if(newsletterInput.value.trim() !== '') {
                    alert('Thank you for subscribing to our newsletter!');
                    newsletterInput.value = '';
                } else {
                    alert('Please enter a valid email address.');
                }
            });
        });
